@model List<Student>
@{
    Layout = "_Layout";
}




    <a class="btn btn-success" asp-action="createStd" asp-controller="Student">create</a>
   
    <table class="table table-bordered mt-5">
        <thead>
        <th>ID</th>
        <th>name</th>
        <th>age</th>
        <th>Email</th>
        <th>Department ID</th>
        </thead>
        <tbody>
            @foreach (Student item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.age</td>
                    <td>@item.Email</td>
                    <td>@item.Deptid</td>
                    <td class="w-25">
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-success" asp-action="ditails" asp-controller="student" asp-route-id="@item.Id">ditails</a>
                    <a class="btn btn-warning" asp-action="editstd" asp-controller="student" asp-route-id="@item.Id">update</a>
                    <a class="btn btn-danger" onclick="return confirm('are you sure')" asp-action="delete" asp-controller="student" asp-route-id="@item.Id">delete</a>
                   </div>
                </td>
                </tr>

            }
        </tbody>
